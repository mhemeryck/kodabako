{
  "name": "kodabako",
  "productName": "kodabako",
  "version": "0.0.11",
  "description": "codabox desktop client",
  "main": "src/main.js",
  "scripts": {
    "start": "electron-forge start",
    "package": "electron-forge package",
    "make": "electron-forge make",
    "release": "electron-forge publish",
    "lint": "eslint"
  },
  "repository": "https://github.com/mhemeryck/kodabako",
  "author": {
    "name": "Martijn Hemeryck",
    "email": "martijn.hemeryck@gmail.com"
  },
  "license": "MIT",
  "config": {
    "forge": {
      "packagerConfig": {
        "icon": "src/favicon.png"
      },
      "makers": [
        {
          "name": "@electron-forge/maker-squirrel",
          "config": {
            "name": "kodabako",
            "certificateFile": "cert/codabox.xyz.pem"
          }
        },
        {
          "name": "@electron-forge/maker-zip",
          "platforms": [
            "darwin",
            "linux"
          ]
        },
        {
          "name": "@electron-forge/maker-deb",
          "config": {}
        },
        {
          "name": "@electron-forge/maker-rpm",
          "config": {}
        }
      ],
      "publishers": [
        {
          "name": "@electron-forge/publisher-github",
          "config": {
            "repository": {
              "owner": "mhemeryck",
              "name": "kodabako"
            },
            "prerelease": true,
            "draft": true
          }
        }
      ]
    }
  },
  "devDependencies": {
    "@electron-forge/cli": "^6.0.0-beta.63",
    "@electron-forge/maker-deb": "^6.0.0-beta.63",
    "@electron-forge/maker-rpm": "^6.0.0-beta.63",
    "@electron-forge/maker-squirrel": "^6.0.0-beta.63",
    "@electron-forge/maker-zip": "^6.0.0-beta.63",
    "@electron-forge/publisher-github": "^6.0.0-beta.63",
    "electron": "^17.0.0",
    "eslint": "^8.8.0"
  },
  "dependencies": {
    "electron-squirrel-startup": "^1.0.0",
    "ssh2-sftp-client": "^7.2.2",
    "update-electron-app": "^2.0.1"
  }
}
